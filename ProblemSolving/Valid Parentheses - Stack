class Solution {
    public boolean isValid(String s) {
        Stack<Character> st = new Stack<>();
        if(s.isEmpty()){
            return true;
        }
        if(s.length() == 1){
            return false;
        }
        
        for(int i=0;i<s.length();i++){
            if(s.charAt(i) == '(' || s.charAt(i) == '{' || s.charAt(i)  == '['){
                st.push(s.charAt(i));
            }else {
                if(st.isEmpty()) return false;
                char top = st.peek();
                st.pop();
                if((s.charAt(i) == ')' && top== '(') || (s.charAt(i) == '}' && top== '{') || (s.charAt(i) == ']' && top== '[') ){
                    continue;
                }else{
                    return false;
                }
            }
        }
        return st.isEmpty();
    }
}
