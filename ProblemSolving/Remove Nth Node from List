class Solution {
    public ListNode removeNthFromEnd(ListNode head, int n) {
        if((head == null) ){
            return null;
        }
        if(head.next == null && n==1){
            return null;
        }

        int count =0;
        ListNode temp = head;
        while(temp != null){
            count++;
            temp = temp.next;
        }
        if(count - n == 0){
            head = head.next;
            return head;
        }

        int cnt=1;
        ListNode temp1 = head;
        while(cnt < (count-n)){
            temp1 = temp1.next;
            cnt +=1;
            
        }
        temp1.next = temp1.next.next;
        return head;
    }
}
